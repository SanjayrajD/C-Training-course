#include<iostream>
#include<iomanip>
using namespace std;
int main()
{
    int a,b,c,d,e;
    float f;
    cout<<"enter the number of matches played"<<endl;
    cin>>a;
    cout<<"enter the number innings batted"<<endl;
    cin>>b;
    cout<<"enter number of times notout"<<endl;
    cin>>c;
    cout<<"enter runs scored"<<endl;
    cin>>d;
    e=(b-c);
    f=(d/e);
    cout<<fixed<<setprecision(1)<<"batting average="<<f;
}

